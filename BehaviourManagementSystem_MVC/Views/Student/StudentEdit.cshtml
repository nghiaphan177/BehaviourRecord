@model BehaviourManagementSystem_ViewModels.Requests.IndAssessRequest
@{
    ViewData["Title"] = "StudentEdit";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    var img = Model.AvtName;
    img = "/images/" + img;
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Chỉnh Sửa Học Sinh</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="students.html">Học sinh</a></li>
                <li class="breadcrumb-item active">Chỉnh Sửa học sinh</li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="StudentEdit" asp-controller="Student">
                    <input hidden asp-for="TeacherId" value="@User.FindFirst("Id").Value">
                    <input hidden asp-for="Ind_Id" value="@Model.Ind_Id">
                    @*<script>
                            console.log(@User.FindFirst("Id").Value)
                        </script>*@
                    <div class="row">

                        <div class="col-12">
                            <h5 class="form-title"><span>Thông tin học sinh</span></h5>
                        </div>
                        <div class="col-12 col-sm-12">
                            <div class="form-group">
                                <img id="uploadPreview" style="width: 150px; height: 150px; position:relative" src="@img" />
                                <input style="position: absolute; bottom: 1rem; left: 12rem; color: transparent" id="uploadImage" type="file" asp-for="@Model.AvtName" class="hidden" onchange="PreviewImage();" />

                                @*<input asp-for="@Model.AvtName" type="file" class="form-control">*@
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Họ <span style="color: red;">*</span></label>
                                <input required asp-for="@Model.FirstName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Tên <span style="color: red;">*</span></label>
                                <input required asp-for="@Model.LastName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Lớp</label>
                                <input asp-for="@Model.Classes" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Giới Tính </label>
                                <select asp-for="Gender" class="form-control">
                                    @if (Model.Gender == "Nữ")
                                    {
                                        <option selected>Nữ</option>
                                        <option>Nam</option>
                                    }
                                    else
                                    {
                                        <option>Nữ</option>
                                        <option selected>Nam</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Ngày Sinh</label>
                                <div>
                                    <input asp-for="@Model.DOB" type="date" class="form-control">
                                </div>
                            </div>
                        </div>

                        @*<div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Số Điện Thoại</label>
                                    <input asp-for=""  type="tel" class="form-control">
                                </div>
                            </div>*@
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Địa Chỉ</label>
                                <input asp-for="@Model.Address" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Email <span style="color: red;">*</span></label>
                                <input required asp-for="@Model.Email" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="col-12 text-xl-center">
                            <button type="submit" class="btn btn-primary ">Sửa</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('input[type="file"]').change(function () {
                if ($(this).val() != "") {
                    $(this).css('color', '#333');
                } else {
                    $(this).css('color', 'transparent');
                }
            });
        })
    </script>
}