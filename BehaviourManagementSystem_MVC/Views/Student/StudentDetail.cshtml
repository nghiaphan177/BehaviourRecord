<!-- Đánh giá Start -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-body">
            <ul class="nav nav-tabs nav-tabs-solid">
                <li class="nav-item">
                    <a class="nav-link active" href="#solid-tab1"
                       data-toggle="tab">Đánh Giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#solid-tab2"
                       data-toggle="tab">Can Thiệp</a>
                </li>
            </ul>
            <hr>
            <div class="tab-content">
                <div class="tab-pane show active" id="solid-tab1">
                    <a asp-action="Create" asp-controller="Assessment" asp-route-id="@Model.Individual.Id">
                        <button type="button" class="btn btn-info btn-danhgia">Thêm đánh giá</button>
                    </a>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-center mb-0 datatable">
                                            <thead>
                                                <tr class="text-center">
                                                    <th class="">Ngày</th>
                                                    <th class="">Thời Gian</th>
                                                    <th>Tường Trình</th>
                                                    <th>Phân Tích</th>
                                                    <th>Chi Tiết</th>
                                                    <th class="">Tóm Tắt</th>
                                                    <th class="text-right">Tùy Chọn</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(AssessmentRequest assessment in Model.Assessment)
                                               {
                                                   <tr class="text-center">
                                                    <td>@assessment.RecordDate?.ToShortDateString()</td>
                                                    <td>@assessment.RecordStart</td>
                                                    <td>
                                                            @{
                                                                if(assessment.RecordIsCompeleted == true)
                                                                {
                                                                    <span class="badge badge-success">Hoàn Thành</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                                }
                                                            }
                                                        
                                                    </td>
                                                    <td>
                                                        @{
                                                                if(assessment.AnalyzeIsCompeleted == true)
                                                                {
                                                                    <span class="badge badge-success">Hoàn Thành</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                                }
                                                            }
                                                    </td>
                                                    <td>
                                                        @{
                                                                if(assessment.FunctionIsCompeleted == true)
                                                                {
                                                                    <span class="badge badge-success">Hoàn Thành</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                                }
                                                            }
                                                    </td>
                                                    <td>Xin Chào</td>
                                                    <td class="text-right">
                                                        <div class="actions">
                                                            <a href="edit-room.html"
                                                               class="btn btn-sm bg-success-light mr-2">
                                                                <i class="fas fa-pen"></i>
                                                            </a>
                                                            <button onclick="deleteAssessment(id)" class="btn btn-sm bg-danger-light">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                               }
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="solid-tab2">
                    <a href="/Intervention">
                        <button type="button" class="btn btn-info btn-danhgia">Thêm Can Thiệp</button>
                    </a>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    @await Component.InvokeAsync("InterventionAll")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Đánh giá End -->

<footer>
    <p>Copyright © 2020 Dreamguys.</p>
</footer>
@section scripts {
    <script src="~/plugins/sweet-alert2/sweetalert2.min.js"></script>
    <script>
        //Warning Message
        function deleteAssessment(id) {
            swal({
                title: 'Bạn đã chắc chắn?',
                text: "Xóa hồ sơ đánh giá này này!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonClass: 'btn btn-success',
                cancelButtonClass: 'btn btn-danger m-l-10',
                confirmButtonText: 'Yes!'
            }).then(function () {
                $.ajax({
                    url: "Assessment/delete",
                    data: { "id": id },
                    type: "DELETE",
                    success: function (result) {
                        if (result.status == true) {
                            swal(
                                'Đã Xóa Thành Công!',
                                '',
                                'success'
                            ),
                                $("#mild-" + id).remove();
                        }
                    }
                })
            })
        }
    </script>

}

