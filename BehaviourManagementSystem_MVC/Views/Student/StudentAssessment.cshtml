@model List<BehaviourManagementSystem_ViewModels.Requests.IndAssessRequest>
@{
    ViewData["Title"] = "StudentAssessment";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Học sinh</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                <li class="breadcrumb-item active">Danh sách học sinh</li>
            </ul>
        </div>
        @*<div class="col-auto text-right float-right ml-auto">
            <a href="/Student/StudentAdd" class="btn btn-primary"><i class="fas fa-plus"></i></a>
        </div>*@
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body">
                @if (Model != null)
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Lớp</th>
                                    <th>Ngày sinh</th>
                                    <!-- <th>Parent Name</th>
                                    <th>Mobile Number</th> -->
                                    <th>Địa chỉ</th>
                                    <th class="text-right">Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr id="Assent-@item.Ind_Id">
                                    <td>
                                        <h2 class="table-avatar">
                                            
                                            @{
                                                var fName = item.FirstName + " " + item.LastName;
                                            }
                                            <a href="/Student/StudentDetail?id=@item.Ind_Id">@fName</a>
                                        </h2>
                                    </td>
                                    <td>@item.Classes</td>
                                    @{
                                        DateTime d = Convert.ToDateTime(item.DOB);
                                        string s = d.ToString("dd/MM/yyyy");
                                    }
                                    <td>@s</td>
                                    <td>@item.Address</td>
                                    <td class="text-right">
                                        <div class="actions">
                                            <a href="/Student/StudentEdit?id=@item.Ind_Id" class="btn btn-sm bg-success-light mr-2">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a onclick=" deleteIndiLi('@item.Ind_Id', '@item.TeacherId')" class="btn btn-sm bg-danger-light">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                }

                            </tbody>
                        </table>
                    </div>

                }
                else
                {
                    <p class="text-center text-warning">Không có dữ liệu</p>
                }
            </div>
        </div>
    </div>
</div>
<script>
    //Warning Message
    function deleteIndiLi(idind, idteacher) {
        swal({
            title: 'Bạn đã chắc chắn?',
            text: "Xóa trường này!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes!'
        }).then(function () {
            $.ajax({
                url: "/Student/Delete",
                data: { "idIndi": idind, "idTeacher": idteacher },
                type: "DELETE",
                success: function (result) {
                    if (result.status == true) {

                        $("#Assent-" + idind).remove();
                    }
                }
            })
        })
    }
</script>

