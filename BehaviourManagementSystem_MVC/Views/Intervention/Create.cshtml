        function submitNextStep() {
            var valdata = $("#form-check").serialize();
                $.ajax({
                    url: "/intervention/checkboxcreate",
                    data: valdata,
                    type: "post",
                    success: function (result) {
                        if (result.success == true) {
                            $('.nav a[href="#hoso"]').tab('show');
                        }
                    }
                })
        }
    </script>


}

