
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Students</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item active"><a href="index.html">Trang chủ</a></li>
                <li class="breadcrumb-item active">Học Sinh</li>
                <li class="breadcrumb-item active">Can Thiệp</li>
            </ul>
        </div>

    </div>
</div>
<!-- Can Thiệp Start -->
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title text-center text-info text-uppercase">Can Thiệp Hành Vi</h5>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-solid nav-tabs-rounded nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active"
                           href="#giaidoan" data-toggle="tab">Can Thiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#hoso" data-toggle="tab">Hồ Sơ Can Thiệp</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link"
                           href="#quanlycanthiep" data-toggle="tab">Quản Lý Can Thiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#nganchantaipham" data-toggle="tab">Ngăn ngừa Tái Phạm</a>
                    </li>*@
                </ul>
                <div class="tab-content">
                    <!-- Tab Giai Đoạn Start -->
                    <div class="tab-pane show active" id="giaidoan">
                        <form action="#">
                            <div class="form-group row text-center">
                                <label class="col-form-label col-md-10">Chọn Giai Đoạn Can Thiệp: </label>
                                <div class="col-md-12 mx-auto">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="check-nhe" name="checkbox" /> Can Thiệp Nhẹ
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="check-vua" name="checkbox" /> Can Thiệp Vừa
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label style="margin-left: 62px;">
                                            <input type="checkbox" id="check-kn" name="checkbox" /> Can Thiệp Khắc Nghiệt
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="col-sm-3 mx-auto text-center">
                                    <button type="submit" id="button-giaidoan" class="btn btn-success btn-sm btn-block">Lưu và Tiếp Tục</button>
                                    <button type="submit" class="btn btn-success btn-sm btn-block">Lưu và Thoát</button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- Tab Giai Đoạn End -->
                    <!-- Tab Nâng Câp Hồ Sơ Start-->
                    <div class="tab-pane" id="hoso">
                        <!-- form nhẹ start -->

                        <form id="assessform1" asp-action="CreateProfile" asp-controller="Intervention" method="post">
                            <input hidden name="AssesetmentId" value="@ViewBag.IdInter">
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Ngày</label>
                                <div class="col-md-10">
                                    <input type="date" name="ProfileDate" class="form-control" />
                                </div>
                            </div>

                            <div id="input-nhe" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Nhẹ</label>
                                <div class="col-md-10">
                                    <input type="text" autocomplete="off" id="nhe" name="ProfileMildDesciption" value="" placeholder="Nhấp vào để chọn" class="form-control dropdown-toggle" data-toggle="dropdown" />
                                    @await Component.InvokeAsync("DropDown", new { name = "mild" })
                                </div>
                            </div>
                            <div id="input-vua" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Vừa</label>
                                <div class="col-md-10">
                                    <input type="text" autocomplete="off" id="trungbinh" name="ProfileModerateDesciption" value="" placeholder="Nhấp vào để chọn" class="form-control dropdown-toggle" data-toggle="dropdown" />
                                    @await Component.InvokeAsync("DropDown", new { name = "moderate" })
                                </div>
                            </div>
                            <div id="input-kn" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Khắc Nghiệt</label>
                                <div class="col-md-10">
                                    <input type="text" autocomplete="off" id="khacnghiet" name="ProfileExtremeDesciption" value="" placeholder="Nhấp vào để chọn" class="form-control dropdown-toggle" data-toggle="dropdown" />
                                    @await Component.InvokeAsync("DropDown", new { name = "extreme" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Phục Hồi</label>
                                <div class="col-md-10">
                                    <input type="text" autocomplete="off" required id="tbphuchoi" name="ProfileRecoveryDesciption" placeholder="Nhấp vào để chọn" value="" class="form-control dropdown-toggle" data-toggle="dropdown" />
                                    @await Component.InvokeAsync("DropDown", new { name = "recovery" })
                                </div>
                            </div>
                            <div class="col">
                                <div class="col-sm-3 mx-auto text-center">
                                    <button type="submit" id="" class="btn btn-success btn-sm btn-block">Lưu và Tiếp Tục</button>
                                    <button type="submit" class="btn btn-success btn-sm btn-block">Lưu và Thoát</button>
                                </div>
                            </div>
                        </form>
                        <!-- form khác end -->
                    </div>
                    <!-- Tab Nâng Câp Hồ Sơ End-->
              
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Can Thiệp End -->
@section scripts {
    <script src="~/plugins/sweet-alert2/sweetalert2.min.js"></script>
    <script src="~/js/CheckBoxMoInput.js"></script>
}

