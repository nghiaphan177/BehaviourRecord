@model InterventionRequest

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Chi Tiết Can Thiệp</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active"><a href="/Intervention/GetInterventionById?id=@Model.AssesetmentId">Danh Sách Can Thiệp</a></li>
                <li class="breadcrumb-item active">Chi Tiết Can Thiệp</li>
            </ul>
        </div>

    </div>
</div>
<!-- Can Thiệp Start -->
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title text-center text-info text-uppercase">Chi Tiết Can Thiệp Hành Vi</h5>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-solid nav-tabs-rounded nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active"
                           href="#giaidoan" data-toggle="tab">Can Thiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#hoso" data-toggle="tab">Hồ Sơ Can Thiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#quanlycanthiep" data-toggle="tab">Chi Tiết Can Thiệp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="#nganchantaipham" data-toggle="tab">Ngăn Ngừa Tái Phạm</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <!-- Tab Giai Đoạn Start -->
                    <div class="tab-pane show active" id="giaidoan">
                        <form action="#">
                            <div class="form-group row text-center">
                                <label class="col-form-label col-md-10">Giai Đoạn Can Thiệp: </label>
                                <div class="col-md-12 mx-auto">
                                    <div class="checkbox">
                                        <label>
                                            <input readonly disabled type="checkbox" id="check-nhe-sua" name="checkbox" @((Model.ProfileMildDesciption != null) ? "checked" : "") /> Can Thiệp Nhẹ
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input readonly disabled type="checkbox" id="check-vua-sua" name="checkbox" @((Model.ProfileModerateDesciption != null) ? "checked" : "") /> Can Thiệp Vừa
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label style="margin-left: 5rem;">
                                            <input readonly disabled type="checkbox" id="check-kn-sua" name="checkbox" @((Model.ProfileExtremeDesciption != null) ? "checked" : "") /> Can Thiệp Nghiêm Trọng
                                        </label>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- Tab Giai Đoạn End -->
                    <!-- Tab Nâng Câp Hồ Sơ Start-->
                    <div class="tab-pane" id="hoso">
                        <!-- form nhẹ start -->

                        <form>
                            @*<input hidden name="AssesetmentId" value="190a0735-a5df-41b5-bdc1-694f158d2322">*@
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Ngày</label>
                                @{
                                    DateTime d = Convert.ToDateTime(Model.ProfileDate);
                                    string date = d.ToString("dd-MM-yyyy");
                                }
                                <div class="col-md-10">
                                    <input readonly type="text" value="@date" name="ProfileDate" class="form-control" />
                                </div>
                            </div>
                            @if (Model.ProfileMildDesciption != null)
                            {
                                <div id="input-nhe-sua" class="form-group row">
                                    <label class="col-form-label col-md-2">Giai Đoạn Nhẹ</label>
                                    <div class="col-md-10">
                                        <input readonly type="text" autocomplete="off" id="nhe-sua" name="ProfileMildDesciption" value="@Model.ProfileMildDesciption" class="form-control" />
                                    </div>
                                </div>
                            }
                            @if (Model.ProfileModerateDesciption != null)
                            {
                                <div id="input-vua-sua" class="form-group row">
                                    <label class="col-form-label col-md-2">Giai Đoạn Vừa</label>
                                    <div class="col-md-10">
                                        <input type="text" autocomplete="off" id="trungbinh-sua" name="ProfileModerateDesciption" value="@Model.ProfileModerateDesciption" class="form-control" />
                                    </div>
                                </div>
                            }
                            @if (Model.ProfileExtremeDesciption != null)
                            {
                                <div id="input-kn-sua" class="form-group row">
                                    <label class="col-form-label col-md-2">Giai Đoạn Nghiêm Trọng</label>
                                    <div class="col-md-10">
                                        <input type="text" autocomplete="off" id="khacnghiet-sua" name="ProfileExtremeDesciption" value="@Model.ProfileExtremeDesciption" class="form-control" />
                                    </div>
                                </div>
                            }
                            @if (Model.ProfileRecoveryDesciption != null)
                            {
                                <div class="form-group row">
                                    <label class="col-form-label col-md-2">Giai Đoạn Phục Hồi</label>
                                    <div class="col-md-10">
                                        <input type="text" readonly autocomplete="off" required id="tbphuchoi" name="ProfileRecoveryDesciption" value="@Model.ProfileRecoveryDesciption" class="form-control" />
                                    </div>
                                </div>
                            }

                        </form>
                        <!-- form khác end -->
                    </div>
                    <!-- Tab Nâng Câp Hồ Sơ End-->
                    <!-- Tab Quản Lí Can Thiệp Start -->
                    <div class="tab-pane" id="quanlycanthiep">
                        <form action="#">
                            <div id="input-ql-nhe-sua" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Nhẹ</label>
                                <div class="col-md-10">
                                    <input readonly type="text" value="@Model.ManageMild" class="form-control" />
                                </div>
                            </div>
                            <div id="input-ql-vua-sua" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Vừa</label>
                                <div class="col-md-10">
                                    <input readonly type="text" value="@Model.ManageModerate" class="form-control" />
                                </div>
                            </div>
                            <div id="input-ql-kn-sua" class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Nghiêm Trọng</label>
                                <div class="col-md-10">
                                    <input readonly type="text" value="@Model.ManageExtreme" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Giai Đoạn Phục hồi</label>
                                <div class="col-md-10">
                                    <input readonly type="text" value="@Model.ManageRecovery" class="form-control" />
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- Tab Quản Lí Can Thiệp End -->
                    <!-- Tab ngăn chặn tái phạm Start -->
                    <div class="tab-pane" id="nganchantaipham">
                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Thái Độ</label>
                            <div class="col-md-10">
                                <input readonly type="text" value="@Model.PreventStatus" id="text-key" class="form-control text-key" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Kế Hoạch Hoạt Động</label>
                            <div class="col-md-10">
                                <input readonly type="text" value="@Model.PreventActivity" id="text-key" class="form-control text-key" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Kế Hoạch Tương Tác</label>
                            <div class="col-md-10">
                                <input readonly type="text" value="@Model.PreventInteraction" class="form-control text-key" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Địa Điểm Tương Tác</label>
                            <div class="col-md-10">
                                <input readonly type="text" value="@Model.PreventInvironmental" class="form-control text-key" />
                            </div>
                        </div>
                    </div>
                    <!-- Tab ngăn chặn tái phạm End -->
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div style="margin-top: -3.5rem;" class="col-sm-3 mx-auto text-center">
            <a href="/Intervention/GetInterventionById?id=@Model.AssesetmentId">
                <button type="submit" class="btn btn-danger btn-sm btn-block">Thoát</button>
            </a>
        </div>
    </div>
</div>
<!-- Can Thiệp End -->
@section scripts {
    <script src="~/js/CheckBoxMoInput.js"></script>

}