@model IEnumerable<BehaviourManagementSystem_ViewModels.Requests.InterventionRequest>

@{
    ViewData["Title"] = "GetInterventionByIdAsync";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="page-title">Học Sinh</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item active">Hành Vi</li>
                <li class="breadcrumb-item active"><a href="students.html">Can Thiệp Hành Vi</a></li>
            </ul>
        </div>
        <div class="col-auto text-right float-right ml-auto">
            <a asp-action="Create" asp-controller="Intervention" asp-route-id="@ViewBag.IdAssiment" class="btn btn-primary"><i class="fas fa-plus"></i></a>
        </div>
    </div>
</div>
<!-- Đánh giá Start -->
<div class="row">
    <div class="col-sm-12">
        <div class="card-body">
            <ul class="nav nav-tabs nav-tabs-solid d-flex justify-content-center">
                <li class="nav-item active">
                    <a class="nav-link" href="#solid-tab2"
                       data-toggle="tab">Can Thiệp Hành Vi</a>
                </li>
            </ul>
            <hr style="height: 1px; border: none; color: #333; background-color: #b9b1b1; width: 70%; border-top: 1px dotted yellow;" />

            <div class="tab-content">
                <div class="tab-pane active" id="solid-tab2">
                    @*<a href="/Intervention">
                        <button type="button" class="btn btn-info btn-danhgia">Thêm Can Thiệp</button>
                    </a>*@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-center mb-0 datatable">
                                            <thead>
                                                <tr class="text-center">
                                                    <th>Ngày</th>
                                                    <th>Hồ Sơ</th>
                                                    <th>Quản Lý</th>
                                                    <th>Ngăn Chặn</th>
                                                    <th>Tóm Tắt</th>
                                                    <th class="text-right">Tùy Chọn</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr id="inter-@item.Id" class="text-center">
                                                        @{
                                                            DateTime d = Convert.ToDateTime(item.ProfileDate);
                                                            string s = d.ToString("dd/MM/yyyy");
                                                        }
                                                        <td>@s</td>
                                                        @if (item.ProfileIsCompeleted == true)
                                                        {
                                                            <td>
                                                                <span class="badge badge-success">Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        @if (item.ManageIsCompleted == true)
                                                        {
                                                            <td>
                                                                <span class="badge badge-success">Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        @if (item.PreventIsCompleted == true)
                                                        {
                                                            <td>
                                                                <span class="badge badge-success">Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                <span class="badge badge-danger">Chưa Hoàn Thành</span>
                                                            </td>
                                                        }
                                                        <td>Xin Chào</td>
                                                        <td class="text-right">
                                                            <div class="actions">
                                                                <a href="/Intervention/Edit?id=@item.Id"
                                                                   class="btn btn-sm bg-success-light mr-2">
                                                                    <i class="fas fa-pen"></i>
                                                                </a>
                                                                <a onclick=" deleteActivity('@item.Id')" class="btn btn-sm bg-danger-light">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Đánh giá End -->
<script>
    //Warning Message
    function deleteActivity(id) {
        swal({
            title: 'Bạn đã chắc chắn?',
            text: "Xóa trường này!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes!'
        }).then(function () {
            $.ajax({
                url: "/Intervention/Delete",
                data: { "id": id },
                type: "DELETE",
                success: function (result) {
                    if (result.status == true) {
                        
                            $("#inter-" + id).remove();
                    }
                }
            })
        })
    }
</script>