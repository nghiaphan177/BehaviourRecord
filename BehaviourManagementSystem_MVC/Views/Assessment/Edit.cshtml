                                <label class="col-form-label col-md-2">Ngày<span style="color: red;">*</span></label>
                                <div class="col-md-10">
                                    @{
                                        DateTime d = Convert.ToDateTime(Model.RecordDate);
                                        string date = d.ToString("yyyy-MM-dd");
                                    }
                                    <input required asp-for="RecordDate" type="date" value="@date" class="form-control" />
