@model ResetPasswordRequest
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Đổi mật khẩu</title>
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/icons.css" />
    <link rel="stylesheet" href="~/css/metismenu.min.css" />
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body>
    <!-- Begin page -->
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="card-body pt-0">
                            <h3 class="text-center mt-4">
                                <a href="index.html" class="logo logo-admin">
                                    <img style="position: relative;" src="~/assets/img/favicon.png" height="30" alt="logo">
                                </a>
                            </h3>
                            <div class="p-3">
                                <h4 class="text-muted font-size-18 mb-3 text-center">Tạo mới mật khẩu</h4>
                                <form class="form-horizontal mt-4" action="/Account/ResetPassword" method="post">
                                    <input asp-for="Id" type="text" class="form-control" hidden>
                                    <input asp-for="UserOrEmail" type="text" class="form-control" hidden>
                                    <input asp-for="Code" type="text" class="form-control" hidden>
                                    <div class="form-group">
                                        <label for="useremail">Mật khẩu cũ</label>
                                        <input required asp-for="PasswordOld" type="password" class="form-control" data-parsley-required-message="Hãy mật khẩu cũ">
                                    </div>
                                    <div class="form-group">
                                        <label for="useremail">Mật khẩu mới</label>
                                        <input required id="pass1" asp-for="PasswordNew" type="password" class="form-control" data-parsley-required-message="Hãy mật khẩu mới">
                                    </div>
                                    <div class="form-group">
                                        <label for="useremail">Xác nhận mật khẩu</label>
                                        <input required asp-for="PasswordConfirm" type="password" data-parsley-equalto="#pass1" class="form-control" data-parsley-equalto-message="Mật khẩu xác nhận sai" data-parsley-required-message="Hãy mật khẩu xác nhận">
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-12 text-right">
                                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Reset</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/jquery.sparkline.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/waves.min.js"></script>
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').parsley();
        });
    </script>
</body>
</html>
