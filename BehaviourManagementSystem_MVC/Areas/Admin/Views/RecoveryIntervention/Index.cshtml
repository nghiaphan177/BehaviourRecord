@model List<BehaviourManagementSystem_ViewModels.Requests.OptionsRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles {
<link href="~/plugins/RWD-Table-Patterns/dist/css/rwd-table.min.css" rel="stylesheet" type="text/css" media="screen">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Giai Đoạn Phục Hồi</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Giai đoạn nâng cấp</a></li>
                <li class="breadcrumb-item active">Giai đoạn nâng cấp Phục Hồi</li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card m-b-20">
            <div class="card-body">
                <button type="button" data-toggle="modal" data-target=".modal-CreateRecovery" class="btn btn-primary waves-effect waves-light">Thêm</button>
                @if (Model != null)
                {
                    <div class="table-rep-plugin">
                        <div class="table-responsive b-0" data-pattern="priority-columns">
                            <table id="tech-companies-1" class="table table-striped">
                                <thead class="text-center">
                                    <tr>
                                        <th>Số Thứ Tự</th>
                                        <th data-priority="1">Tên Giai Đoạn</th>
                                        <th data-priority="6">Tùy Chọn</th>

                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    @for (var i = 0; i < Model.Count; i++)
                                    {
                                        <tr id="Recovery-@Model[i].Id">

                                            <td>@(i+1)</td>
                                            <td>@Model[i].Content</td>
                                            <td>
                                                <a href="/Admin/RecoveryIntervention/Edit/@Model[i].Id">
                                                    <button type="button" class="btn btn-warning waves-effect waves-light">Sửa</button>
                                                </a>
                                                <button onclick=" deleteRecovery('@Model[i].Id')" type="button" class="btn btn-danger waves-effect waves-light">Xóa</button>
                                            </td>



                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                }
                @if (Model == null)
                {
                    <p class="text-center">Không có dữ liệu</p>
                }
                <div class="modal modal-CreateRecovery" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title mt-0">Thêm Giai Đoạn Phục Hồi</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <form method="post" asp-action="Create" asp-controller="RecoveryIntervention" asp-area="Admin">
                                    <div class="form-group">
                                        <label>Tên Giai Đoạn</label>
                                        <input type="text" autocomplete="off" class="form-control" required placeholder="Điền Tên Giai Đoạn..." />
                                    </div>
                                    <div class="form-group text-center">
                                        <div>
                                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                Thêm
                                            </button>
                                            <button type="reset" data-dismiss="modal" class="btn btn-secondary waves-effect m-l-5">
                                                Hủy
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
@section scripts {
<script src="~/plugins/RWD-Table-Patterns/dist/js/rwd-table.min.js"></script>
<script src="~/plugins/sweet-alert2/sweetalert2.min.js"></script>
@*<script src="~/js/sweet-alert.init.js"></script>*@
<script>
    //Warning Message
    function deleteRecovery(id) {
        swal({
            title: 'Bạn đã chắc chắn?',
            text: "Xóa trường này!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes!'
        }).then(function () {
            $.ajax({
                url: "RecoveryIntervention/delete",
                data: { "id": id },
                type: "DELETE",
                success: function (result) {
                    if (result.status == true) {
                        swal(
                            'Đã Xóa Thành Công!',
                            '',
                            'success'
                        ),
                            $("#Recovery-" + id).remove();
                    }
                }
            })
        })
    }
</script>

}

