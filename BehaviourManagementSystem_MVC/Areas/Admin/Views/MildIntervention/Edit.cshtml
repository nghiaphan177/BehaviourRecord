@model OptionsRequest
@{
    Layout = null;
}
@*Model Edit*@
<div class="modal modal-EditMild" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Chỉnh Sửa Giai Đoạn Nhẹ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Edit" asp-controller="MildIntervention" asp-area="Admin" asp-route-id="@Model.Id">
                    <div class="form-group">
                        <label>Tên Giai Đoạn</label>
                        <input asp-for="@Model.Content" autocomplete="off" type="text" class="form-control" required placeholder="Điền Tên Giai Đoạn..." data-parsley-required-message="Hãy nhập tên giai đoạn" />
                    </div>
                    <div class="form-group text-center">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Sửa
                            </button>
                            <button type="reset" data-dismiss="modal" class="btn btn-secondary waves-effect m-l-5">
                                Hủy
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
@section scripts{
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').parsley();
        });
    </script>
}