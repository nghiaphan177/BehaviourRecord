@using BehaviourManagementSystem_ViewModels.Requests;
@model LoginRequest
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Đăng nhập Admin</title>
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/icons.css" />
    <link rel="stylesheet" href="~/css/metismenu.min.css" />
    <link rel="stylesheet" href="~/css/app.min.css" />
</head>
<body>
    <!-- Begin page -->
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="card-body">

                            <h3 class="text-center m-0">
                                <img style="position: relative;" src="~/assets/img/favicon.png" height="30" alt="logo">
                                <h5 style="position:absolute;top:40px;left:57px; " class="text-white">PreSchool</h5>
                            </h3>

                            <div class="p-3">
                                <h4 class="text-muted font-18 m-b-5 text-center">Đăng nhập trang quản trị</h4>

                                <form method="post" class="form-horizontal m-t-30" action="/Admin/Account/Login">
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <strong>@ViewData.ModelState[String.Empty].Errors[0].ErrorMessage</strong>
                                        </div>
                                    }
                                    <input name="ReturnUrl" value="@ViewBag.ReturnUrl" hidden>
                                    <div class="form-group">
                                        <label for="username">Tên đăng nhập</label>
                                        <input asp-for="UserNameOrEmail" type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required data-parsley-required-message="Hãy nhập tên đăng nhập">
                                    </div>

                                    <div class="form-group">
                                        <label for="userpassword">Mật khẩu</label>
                                        <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="Nhập mật khẩu" required data-parsley-required-message="Hãy nhập mật khẩu">
                                    </div>

                                    <div class="form-group row m-t-20">
                                        <div class="col-6">
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="Remember" type="checkbox" class="custom-control-input" id="customControlInline">
                                                <label class="custom-control-label" for="customControlInline">Nhớ tài khoản</label>
                                            </div>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Đăng nhập</button>
                                        </div>
                                    </div>

                                    <div class="form-group m-t-10 mb-0 row">
                                        <div class="col-12 m-t-20">
                                            <a href="/Admin/Account/RecoverPass" class="text-muted"><i class="mdi mdi-lock"></i> Quên mật khẩu?</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/jquery.sparkline.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/waves.min.js"></script>
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').parsley();
        });
    </script>
</body>
</html>
