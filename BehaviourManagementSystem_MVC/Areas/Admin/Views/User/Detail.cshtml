@model UserProfileRequest

@{
    ViewData["Title"] = "Thông tin người dùng";
    //var base64 = Convert.ToBase64String(Model.AvtName);
    //var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    var imgSrc = ""; // src avt
}
@section styles {
<link href="~/plugins/RWD-Table-Patterns/dist/css/rwd-table.min.css" rel="stylesheet" type="text/css" media="screen">
<link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/lib/datatables.net-button/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/lib/datatables.net-reponsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
    </div>
</div>
<div class="card m-b-20">
    <div class="card-header">
        <div class=" m-b-0 pull-right">
            <a type="button" href="/admin/user/edit/@Model.Id" class="btn btn-primary waves-effect waves-light">
                Sửa đổi thông tin
            </a>
            <button onclick="deleteUser('@Model.Id')" type="button" class="btn btn-danger waves-effect waves-light">Xóa tài khoản</button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <div class="media m-b-30">
                    <img class="img-fluid" src="@imgSrc" alt="Generic placeholder image">

                </div>
                <h4 class="font-18 m-0">@(Model.FirstName+" "+Model.LastName)</h4>
                <p class="text-muted">@Model.Email</p>
            </div>
            <div class="col-sm-9">
                <h4 class="mt-0 header-title">Thông tin</h4>
                <hr />
                <div class="row">
                    <label class="col-sm-3 mt-2">Tên đăng nhập</label>
                    <div class="col-sm-6 mt-2">
                        <span>
                            @Model.Email
                        </span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3 mt-2">Ngày sinh</label>
                    <div class="col-sm-6 mt-2">
                        <span>
                            @(Model.DOB.ToString())
                        </span>
                    </div>
                </div>
                <div class=" row">
                    <label class="col-sm-3 mt-2">Số điện thoại</label>
                    <div class="col-sm-6 mt-2">
                        <span>
                            @Model.PhoneNumber
                        </span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3 mt-2">Vai trò</label>
                    <div class="col-sm-6 mt-2">
                        <span>
                            @Model.RoleName
                        </span>
                    </div>

                </div>
                <div class="row">
                    <label class="col-sm-3 mt-2">Địa chỉ</label>
                    <div class="col-sm-6 mt-2">
                        <span>@Model.Address</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3 mt-2">Giới tính</label>
                    <div class="col-sm-6 mt-2">
                        <span>@Model.Gender</span>
                    </div>
                </div>
            </div>
        </div>
            <div class="row m-t-20">
                <div class="col-12">
                    <div class="card m-b-20 ">
                        <div class="card-body">
                            <h4 class="card-title">Danh sách học sinh</h4>
                            <div class="table-rep-plugin">
                                <div class="table-responsive b-0" data-pattern="priority-columns">
                                    <table id="tech-companies-1" class="table  table-striped">
                                        <thead>
                                            <tr>
                                                <th>Số Thứ Tự</th>
                                                <th data-priority="1">Tên Học sinh</th>
                                                <th data-priority="3">Tên Lớp</th>
                                                <th data-priority="1">Email</th>
                                                <th data-priority="3">Giáo viên chủ nhiệm</th>
                                                <th data-priority="6">Tùy Chọn</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th>GOOG <span class="co-name">Google Inc.</span></th>
                                                <td>597.74</td>
                                                <td>12:12PM</td>
                                                <td>14.81 (2.54%)</td>
                                                <td>582.93</td>
                                                @*<td>
                                                        <span style="font-size:14px; text-align:center;" class="badge badge-success">Đã Đăng Kí</span>
                                                    </td>*@
                                                <td>
                                                    <a href="/admin/Student/Details/" type="button" class="btn btn-primary waves-effect waves-light">Xem thông tin</a>
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>


    </div>
</div>
@section scripts {
    @*<script src="~/plugins/RWD-Table-Patterns/dist/js/rwd-table.min.js"></script>*@
<script src="~/lib/datables.net/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/plugins/sweet-alert2/sweetalert2.min.js"></script>
<script src="~/lib/datatables.net-reponsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script>
        //Warning Message
        function deleteUser(id) {
            swal({
                title: 'Bạn đã chắc chắn?',
                text: "Xóa người dùng này!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonClass: 'btn btn-success',
                cancelButtonClass: 'btn btn-danger m-l-10',
                confirmButtonText: 'Yes!'
            }).then(function () {
                $.ajax({
                    url: "User/delete",
                    data: { "id": id },
                    type: "DELETE",
                    success: function (result) {
                        if (result.status == true) {
                            swal(
                                'Đã Xóa Thành Công!',
                                '',
                                'success'
                            ),
                                $("#mild-" + id).remove();
                        }
                    }
                })
            })
        }
    </script>
<script>
    $(document).ready(function(){$("#datatable").DataTable(),$("#datatable-buttons").DataTable({lengthChange:!1,buttons:["colvis"]}).buttons().container().appendTo("#datatable-buttons_wrapper .col-md-6:eq(0)")});
</script>
}
