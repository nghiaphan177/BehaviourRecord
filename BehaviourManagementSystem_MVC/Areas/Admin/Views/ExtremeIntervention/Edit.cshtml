@model OptionsRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@*Modal-Edit Start*@
<div class="modal fade modal-EditExtreme" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Chỉnh Sửa Giai Đoạn Khắc Nghiệt</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="" asp-action="Edit" asp-controller="ExtremeIntervention" asp-area="Admin" asp-route-id="@Model.Id" method="post">
                    <div class="form-group">
                        <label>Tên Giai Đoạn</label>
                        <input type="text" asp-for="@Model.Content" autocomplete="off" class="form-control" name="content" required placeholder="Điền Tên Giai Đoạn..." />
                    </div>
                    <div class="form-group text-center">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Sửa
                            </button>
                            <button type="reset" data-dismiss="modal" class="btn btn-secondary waves-effect m-l-5">
                                Hủy
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
@*Modal-Edit End*@
@section scripts{
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').parsley();
        });
    </script>
}
