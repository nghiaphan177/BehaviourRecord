@using BehaviourManagementSystem_ViewModels.Requests;
@model UserProfileRequest
@{
    ViewData["Title"] = "StudentProfileEdit";
}
@{
    ViewData["Title"] = "Thông tin người dùng";
    var img = Model.AvtName;
    Uri uriResult;
    bool result = Uri.TryCreate(Model.AvtName, UriKind.Absolute, out uriResult)
     && (uriResult.Scheme == Uri.UriSchemeHttp || uriResult.Scheme == Uri.UriSchemeHttps);
    if (result != true)
    {
        img = "/images/" + img;
    }
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Chỉnh sửa thông tin</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/StudentApp/Home/StudentProfile">Hồ Sơ</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa</li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="profile-header">
            <div class="row align-items-center">
                <div  class="profile-image">
                   <img style="object-fit: cover; border-radius: 50%; height: 100px; width: 100px; "  alt="Profile Image" src="@img">
                </div>
                <div class="col ml-md-n2 profile-user-info">
                    <h4 class="user-name mb-0">@(Model.FirstName+" "+Model.LastName)</h4>
                    <h6 class="text-muted">Học sinh</h6>
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-area="StudentApp" asp-controller="Home" asp-action="StudentProfileEdit" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="form-title"><span>Thông tin học sinh</span></h5>
                                </div>
                                <div class="row">
                                    <input hidden asp-for="@Model.Id" value="@Model.Id" type="text" class="form-control">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Họ<span style="color: red;">*</span></label>
                                            <input disabled asp-for="@Model.FirstName" value="@Model.FirstName" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Tên<span style="color: red;">*</span></label>
                                            <input disabled asp-for="@Model.LastName" type="text" value="@Model.LastName" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Giới Tính<span style="color: red;">*</span> </label>
                                            <select required asp-for="@Model.Gender" value="@Model.Gender" class="form-control" data-parsley-required-message="Trường này là bắt buộc">
                                                @*<option value="null">-- Chọn Giới Tính --</option>*@
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Ngày Sinh<span style="color: red;">*</span></label>
                                            <div>
                                                <input required asp-for="@Model.DOB" type="date" class="form-control" data-parsley-required-message="Trường này là bắt buộc">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Hình Đại Diện Mới</label>
                                            <input asp-for="@Model.AvtName" type="file" class="form-control" onchange="onFileSelected(event)">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Địa Chỉ</label>
                                            <input asp-for="@Model.Address" value="@Model.Address" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Số điên thoại</label>
                                            <input asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Email<span style="color: red;">*</span></label>
                                            <input disabled asp-for="@Model.Email" value="@Model.Email" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 text-xl-center">
                                        <button type="submit" class="btn btn-primary ">Cập nhật</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        function onFileSelected(event) {
            var selectedFile = event.target.files[0];
            var reader = new FileReader();

            var imgtag = document.getElementById("image");
            imgtag.title = selectedFile.name;

            reader.onload = function (event) {
                imgtag.src = event.target.result;
            };

            reader.readAsDataURL(selectedFile);
        }
    </script>
    <script src="~/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('form').parsley();
        });

    </script>
}
